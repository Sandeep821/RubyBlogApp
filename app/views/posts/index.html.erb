<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th><h3>Title</h3></th>
      <th><h3>Body</h3></th>
      <th colspan="3"></th>
    </tr>
  </thead>
      <tr>
	  <td colspan="5"><hr/></td>
	  </tr>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td width="20%"><strong><%= post.title %></strong></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
	  <tr>
	  <td colspan="5"><hr/></td>
	  </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
